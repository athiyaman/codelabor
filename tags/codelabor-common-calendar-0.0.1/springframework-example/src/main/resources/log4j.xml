	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>	
	
	<!-- spring jdbc -->
	<appender
		name="springJdbcDailyRollingAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/spring-jdbc-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>
	
	<!-- spring transaction -->
	<appender
		name="springTransactionDailyRollingAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/spring-transaction-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>
	
	<!-- dbcp -->
	<appender
		name="dbcpDailyRollingAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/dbcp-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>		
	
	<!-- jdbc -->
	<appender
		name="jdbcDailyRollingAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/jdbc-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>	

	<!-- codelabor -->
	<logger name="org.codelabor" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="codelaborDailyRollingAppender" />
	</logger>
	
	<!-- spring -->
	<logger name="org.springframework" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="springDailyRollingAppender" />
	</logger>	
	
	<!-- spring jdbc -->
	<logger name="org.springframework.jdbc" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="springJdbcDailyRollingAppender" />
	</logger>
	
	<!-- spring transaction -->
	<logger name="org.springframework.transaction" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="springTransactionDailyRollingAppender" />
	</logger>
	
	<!-- dbcp -->
	<logger name="org.apache.commons.dbcp" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="dbcpDailyRollingAppender"/>
	</logger>	
	
	<!-- jdbc -->
	<logger name="jdbc" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="jdbcDailyRollingAppender"/>
	</logger>
