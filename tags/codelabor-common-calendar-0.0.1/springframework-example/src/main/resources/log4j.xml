<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
		</layout>
	</appender>
	
	<appender
		name="defaultDailyRollingFile"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/default-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>
	
	<appender
		name="defaultDailyRollingFileAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/default-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
	        <param name="ConversionPattern" value="[%d] %-5p [%l] - %m%n" />
	    </layout>
	</appender>
	
	<!-- codelabor -->
	<appender
		name="codelaborDailyRollingAppender"
		class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log/codelabor-dailly-rolling.log"/>
		<param name="DatePattern" value=".yyyy-MM-dd"/>
	    <layout class="org.apache.log4j.PatternLayout">
