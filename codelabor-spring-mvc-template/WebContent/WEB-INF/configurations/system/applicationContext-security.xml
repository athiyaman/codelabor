<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.2.xsd">
	<security:http auto-config="true" session-fixation-protection="none" >
		<security:intercept-url pattern="/css/**" filters="none"/>
		<security:intercept-url pattern="/images/**" filters="none"/>
		<security:intercept-url pattern="/themes/**" filters="none"/>	
		<security:intercept-url pattern="/index.*" filters="none"/>
		<security:intercept-url pattern="/login.*" filters="none"/>
		<security:intercept-url pattern="/system/login/home.do*" filters="none"/>
		<security:intercept-url pattern="/system/administration/**" access="ROLE_ADMIN" requires-channel="https"/>
		<security:intercept-url pattern="/**" access="ROLE_USER, ROLE_ADMIN" requires-channel="http"/>
		<security:form-login
			always-use-default-target="false"
 			login-page="/system/login/home.do" 
			authentication-failure-url="/system/login/home.do?login_error=true"/>
		<security:logout logout-success-url="/system/login/home.do"/>
		<security:anonymous/>
		<security:remember-me/>
		<security:concurrent-session-control max-sessions="1"/>
		<security:x509/>
	</security:http>
	<security:authentication-provider>
		<security:password-encoder hash="sha"/>
		<security:user-service>
			<security:user name="admin" password="d033e22ae348aeb5660fc2140aec35850c4da997" authorities="ROLE_ADMIN, ROLE_USER"/>
			<security:user name="bomber" password="4d32bbf089a6458f046b60ba671d2ded7b475ee9" authorities="ROLE_USER"/>
		</security:user-service>
	</security:authentication-provider>
	<security:global-method-security>
		<security:protect-pointcut 
			expression="execution(* org.codelabor.system.preferences.**.*(..))" 
			access="ROLE_ADMIN, ROLE_USER"/>
	</security:global-method-security>	
</beans>
