<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.xsd">
		

	<security:http auto-config="true">
		<security:intercept-url pattern="/css/**" filters="none"/>
		<security:intercept-url pattern="/images/**" filters="none"/>
		<security:intercept-url pattern="/themes/**" filters="none"/>	
		<security:intercept-url pattern="/index.*" filters="none"/>
		<security:intercept-url pattern="/login.*" filters="none"/>
		<security:intercept-url pattern="/system/login/home.do*" filters="none"/>
		<security:intercept-url pattern="/system/administration/**" access="ROLE_ADMIN"/>
		<security:intercept-url pattern="/**" access="ROLE_USER"/>

		<security:form-login 
			login-page="/system/login/home.do" 
			always-use-default-target="false" 
			authentication-failure-url="/system/login/home.do?login_error=1"
			default-target-url="/"
			login-processing-url="/j_spring_security_check"/>
	</security:http>
	<security:authentication-provider>
		<security:user-service>
			<security:user name="admin" password="admin" authorities="ROLE_ADMIN"/>
			<security:user name="bomber" password="bomber" authorities="ROLE_USER"/>
		</security:user-service>
	</security:authentication-provider>
</beans>
