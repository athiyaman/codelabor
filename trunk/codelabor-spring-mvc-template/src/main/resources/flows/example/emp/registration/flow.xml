<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="createForm" class="org.codelabor.example.emp.dtos.EmpDTO"/>

	<view-state id="step1" view="example.emp.create.step1.definition">
		<transition on="proceed" to="step2" />
		<transition on="cancel" to="cancelled" />
	</view-state>

	<view-state id="step2" view="example.emp.create.step2.definition">
		<transition on="revise" to="step1" />
		<transition on="proceed" to="step3" />
		<transition on="cancel" to="cancelled" />
	</view-state>

	<view-state id="step3" view="example.emp.create.step3.definition">
		<transition on="revise" to="step2" />
		<transition on="submit" to="confirmed" />
		<transition on="cancel" to="cancelled" />
	</view-state>

	<end-state id="confirmed" view="example.emp.create.confirm.definition"/>
	<end-state id="cancelled" view="example.emp.create.cancel.definition"/>
</flow>