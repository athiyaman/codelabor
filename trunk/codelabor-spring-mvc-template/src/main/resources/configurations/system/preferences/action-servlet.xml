<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		id="systemPreferencesUrlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"
		parent="defaultUrlMapping">
		<property name="mappings">
			<map>
				<entry key="/system/preferences/home.do" value-ref="system.preferences.homeController"/>
				<entry key="/system/preferences/themes/home.do" value-ref="system.preferences.themes.homeController"/>
				<entry key="/system/preferences/locale/home.do" value-ref="system.preferences.locale.homeController"/>
			</map>
		</property>
	</bean>

	<bean
		id="system.preferences.homeController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="system.preferences.home.definition"/>
	</bean>
	<bean
		id="system.preferences.themes.homeController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="system.preferences.themes.home.definition"/>
	</bean>
	<bean
		id="system.preferences.locale.homeController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="system.preferences.locale.home.definition"/>
	</bean>
</beans>
