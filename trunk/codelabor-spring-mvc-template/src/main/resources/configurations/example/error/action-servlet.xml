<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		id="exampleErrorUrlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"
		parent="defaultUrlMapping">
		<property name="mappings">
			<map>
				<entry key="/example/error/jspException.do"
					value-ref="exampleErrorJspExceptionController"/>
				<entry key="/example/error/jspExceptionErrorPage.do"
					value-ref="exampleErrorJspExceptionErrorPageController"/>
				<entry key="/example/error/controllerException.do"
					value-ref="exampleErrorControllerExceptionController"/>
				<entry key="/example/error/flowException.do"
					value-ref="exampleErrorFlowExceptionController"/>
				<entry key="/example/error/securityException.do"
					value-ref="exampleErrorSecurityExceptionController"/>
				<entry key="/example/error/serviceException.do"
					value-ref="exampleErrorServiceExceptionController"/>
				<entry key="/example/error/managerException.do"
					value-ref="exampleErrorManagerExceptionController"/>
				<entry key="/example/error/daoException.do"
					value-ref="exampleErrorDaoExceptionController"/>
			</map>
		</property>
	</bean>

	<bean
		id="exampleErrorJspExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.jsp.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorJspExceptionErrorPageController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.jsp.exception.error.page.definition"/>
	</bean>
	<bean
		id="exampleErrorControllerExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.controller.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorFlowExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.flow.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorSecurityExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.security.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorServiceExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.service.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorManagerExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.manager.exception.definition"/>
	</bean>
	<bean
		id="exampleErrorDaoExceptionController"
		class="org.codelabor.system.spring.controllers.ForwardController">
		<property name="successView" value="example.error.dao.exception.definition"/>
	</bean>
</beans>
