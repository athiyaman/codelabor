<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
    </form-beans>

    <global-exceptions>
		<exception 
			key="errors.rollback" 
			type="org.codelabor.system.exceptions.RollbackCommonException"
			handler="org.codelabor.system.exceptions.CommonExceptionHandler"
			path="/pages/system/error.jsp">
		</exception>
		<exception 
			key="errors.norollback" 
			type="org.codelabor.system.exceptions.NoRollbackCommonException"
			handler="org.codelabor.system.exceptions.CommonExceptionHandler"
			path="/pages/system/error.jsp">
		</exception>		    
		<exception 
			key="errors.unexpected" 
			type="java.lang.Exception"
			handler="org.codelabor.system.exceptions.CommonExceptionHandler"
			path="/pages/system/error.jsp">
		</exception>
    </global-exceptions>

    <global-forwards>
    	<forward name="error" path="/pages/system/error.jsp"/>
    	<forward name="home" path="/layouts/framesetLayout.jsp"/>
    	<forward name="admin" path="/layouts/admin/framesetLayout.jsp"/>
    	<forward name="common" path="/layouts/common/framesetLayout.jsp"/>
    	<forward name="example" path="/layouts/example/framesetLayout.jsp"/>
    	<forward name="system" path="/layouts/system/framesetLayout.jsp"/>
    	<forward name="re" path="/layouts/re/framesetLayout.jsp"/>
    	<forward name="tx" path="/layouts/tx/framesetLayout.jsp"/>
    	<forward name="we" path="/layouts/we/framesetLayout.jsp"/>
    </global-forwards>

	<controller
		processorClass="org.springframework.web.struts.DelegatingRequestProcessor"
		contentType="text/html;charset=UTF-8" locale="true"
		inputForward="true" nocache="false">
	</controller>

	<message-resources parameter="messages.MessageResources" />
	<message-resources parameter="messages.system.MessageResources" key="system"/>
	<message-resources parameter="messages.common.MessageResources" key="common"/>
	<message-resources parameter="messages.admin.MessageResources" key="admin"/>
	<message-resources parameter="messages.example.MessageResources" key="example"/>
	<message-resources parameter="messages.re.MessageResources" key="re"/>
	<message-resources parameter="messages.tx.MessageResources" key="tx"/>
	<message-resources parameter="messages.we.MessageResources" key="we"/>
	
	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation"
			value="/WEB-INF/configurations/system/action-servlet.xml,
			/WEB-INF/configurations/example/action-servlet.xml,
			classpath*:**/applicationContext*.xml" />
	</plug-in>	
</struts-config>

