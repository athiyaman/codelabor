<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="exampleFileUrlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping"
		parent="defaultUrlMapping">
		<property name="mappings">
			<map>
				<entry key="/example/file/spring/mvc/list.do"
					value-ref="exampleFileSpringMvcFileListController"/>
				<entry key="/example/file/spring/mvc/delete.do"
					value-ref="exampleFileSpringMvcFileDeleteController"/>
				<entry key="/example/file/spring/mvc/upload.do"
					value-ref="exampleFileSpringMvcFileUploadController"/>
				<entry key="/example/file/spring/mvc/download.do"
					value-ref="exampleFileSpringMvcFileDownloadController"/>
                <entry key="/example/file/spring/mvc/view.do"
                  value-ref="exampleFileSpringMvcFileViewController"/>
			</map>
		</property>
	</bean>

	<!-- base controller -->
	<bean id="exampleFileBaseController"
		class="org.codelabor.system.file.web.spring.controller.BaseFileController"
		abstract="true">
		<property name="fileManager" ref="fileManager" />
		<property name="propertiesService" ref="propertiesService" />
		<property name="uniqueFilenameGenerationService" ref="uniqueFilenameGenerationService" />
		<property name="mapIdGenerationService" ref="mapIdGenerationService" />
	</bean>

	<bean id="exampleFileBaseCommandController"
		class="org.codelabor.system.file.web.spring.controller.BaseFileCommandController"
		abstract="true">
		<property name="fileManager" ref="fileManager" />
		<property name="propertiesService" ref="propertiesService" />
		<property name="uniqueFilenameGenerationService" ref="uniqueFilenameGenerationService" />
		<property name="mapIdGenerationService" ref="mapIdGenerationService" />
	</bean>

	<bean id="exampleFileBaseFormController"
		class="org.codelabor.system.file.web.spring.controller.BaseFileFormController"
		abstract="true">
		<property name="fileManager" ref="fileManager" />
		<property name="propertiesService" ref="propertiesService" />
		<property name="uniqueFilenameGenerationService" ref="uniqueFilenameGenerationService" />
		<property name="mapIdGenerationService" ref="mapIdGenerationService" />
	</bean>

	<!-- spring mvc file upload -->
	<bean id="exampleFileSpringMvcFileListController"
		class="org.codelabor.system.file.web.spring.controller.FileListController"
		parent="exampleFileBaseController">
		<property name="successView" value="example.file.spring.mvc.list.definition"/>
	</bean>

	<bean id="exampleFileSpringMvcFileDeleteController"
		class="org.codelabor.system.file.web.spring.controller.FileDeleteController"
		parent="exampleFileBaseCommandController">
		<property name="commandName" value="stringArray"/>
		<property name="commandClass" value="org.codelabor.system.dto.StringIdArrayDTO"/>
		<property name="successView" value="redirect:/example/file/spring/mvc/list.do"/>
	</bean>

	<bean id="exampleFileSpringMvcFileUploadController"
		class="org.codelabor.system.file.web.spring.controller.FileUploadController"
		parent="exampleFileBaseFormController">
		<property name="commandClass" value="org.codelabor.system.file.web.spring.command.FileList"/>
		<property name="formView" value="example.file.spring.mvc.list.definition"/>
		<property name="successView" value="redirect:/example/file/spring/mvc/list.do"/>
		<property name="repositoryType" value="FILE_SYSTEM" />
		<property name="repositoryPath" value="C:/upload" />
	</bean>

	<bean id="exampleFileSpringMvcFileDownloadController"
		class="org.codelabor.system.file.web.spring.controller.FileDownloadController"
		parent="exampleFileBaseController">
	</bean>

    <bean id="exampleFileSpringMvcFileViewController"
		class="org.codelabor.system.file.web.spring.controller.FileViewController"
		parent="exampleFileBaseController">
    </bean>

</beans>
