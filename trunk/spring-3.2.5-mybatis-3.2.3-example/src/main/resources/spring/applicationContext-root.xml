<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- Root Context: defines shared resources visible to all other web components -->
	<context:component-scan base-package="org.codelabor.example" />
	<!-- <context:component-scan base-package="org.codelabor" use-default-filters="false"> 
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/> 
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/> 
		</context:component-scan> -->

	<context:property-placeholder location="classpath:properties/jdbc.properties" />

	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<import resource="applicationContext-data.xml" />
	<import resource="applicationContext-myBatis.xml" />
	<import resource="applicationContext-messages.xml" />

</beans>
