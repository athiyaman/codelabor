<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="empForm" type="org.codelabor.example.emp.struts.forms.EmpForm" />
	</form-beans>
	<action-mappings>
		<action path="/example/emp/prepareCreate"
			type="org.codelabor.example.emp.struts.actions.EmpPrepareCreateAction" scope="request">
			<forward name="success" path="example.emp.create.definition" />
		</action>
		<action path="/example/emp/processCreate"
			type="org.codelabor.example.emp.struts.actions.EmpProcessCreateAction" scope="request"
			name="empForm" validate="false">
			<forward name="success" path="/example/emp/list.do" redirect="true"/>
		</action>
		<action path="/example/emp/read"
			type="org.codelabor.example.emp.struts.actions.EmpReadAction" scope="request">
			<forward name="success" path="example.emp.read.definition" />
		</action>
		<action path="/example/emp/list"
			type="org.codelabor.example.emp.struts.actions.EmpListAction" scope="request">
			<forward name="success" path="example.emp.list.definition" />
		</action>
		<action path="/example/emp/prepareUpdate"
			type="org.codelabor.example.emp.struts.actions.EmpPrepareUpdateAction" scope="request">
			<forward name="success" path="example.emp.update.definition" />
		</action>
		<action path="/example/emp/processUpdate"
			type="org.codelabor.example.emp.struts.actions.EmpProcessUpdateAction" scope="request"
			name="empForm" validate="false">
			<forward name="success" path="/example/emp/list.do" redirect="true"/>
		</action>
		<action path="/example/emp/delete"
			type="org.codelabor.example.emp.struts.actions.EmpDeleteAction" scope="request"
			name="stringIdArrayForm" validate="false">
			<forward name="success" path="/example/emp/list.do" redirect="true"/>
		</action>		
	</action-mappings>
</struts-config>