<?xml version="1.0" encoding="euc-kr"?>
<project name="check-dependency" default="install-extra-task">
	<property environment="env" />
	<property file="../../custom.properties"/>	
	<property file="${reference.project.dir}/setup/custom.properties"/>
	<property file="${reference.project.dir}/setup/ant-extra-tasks/ftp/extra-task.properties" />
	<property file="${reference.project.dir}/setup/common.properties" />
	
	<ant antfile="${reference.project.dir}/setup/build-info.xml"/>

	<available
		classname="${extra.task.class.name}"
		property="extra.task.available"/>
	<echo level="info">
		Rest AntHome
		Eclipse > Preference > Ant > Runtime > Classpath
	</echo>
	
	<target name="install-extra-task" unless="extra.task.available">
		<copy
			file="${extra.task.jar.dir}/${extra.task.file.name}"
			todir="${ant.library.dir}"
			failonerror="${option.copy.failonerror}"				
			includeEmptyDirs="${option.copy.includeEmptyDirs}"
			verbose="true"/>
		
	</target>
</project>
