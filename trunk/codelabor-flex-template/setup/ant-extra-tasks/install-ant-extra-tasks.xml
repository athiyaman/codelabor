<?xml version="1.0" encoding="euc-kr"?>
<project name="install-ant-extra-tasks" default="batch-install">
	<property environment="env"/>
	<property file="../custom.properties"/>	
	<property file="${project.dir}/setup/custom.properties"/>
	<property file="${project.dir}/setup/common.properties"/>
	
	<ant antfile="${project.dir}/setup/build-info.xml"/>
	
	<target name="batch-install">
	 	<antcall target="unit-install">
			<param name="ant.extra.task.product.name" value="ant-contrib"/>
		</antcall>
	 	<antcall target="unit-install">
			<param name="ant.extra.task.product.name" value="ant4eclipse"/>
		</antcall>
	 	<antcall target="unit-install">
			<param name="ant.extra.task.product.name" value="jeus"/>
		</antcall>				
	</target>
	
	<target name="unit-install">
		<echo level="info" message="install ${ant.extra.task.product.name}" />
		<ant 
			antfile="${project.dir}/setup/ant-extra-tasks/${ant.extra.task.product.name}/install-extra-task.xml" 
			inheritAll="false"/>
	</target>
</project>
