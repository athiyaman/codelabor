      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:svn:http://codelabor.googlecode.com/svn/tags/codelabor-system-xecure-2.0.0</connection>
    <developerConnection>scm:svn:https://codelabor.googlecode.com/svn/tags/codelabor-system-xecure-2.0.0</developerConnection>
