<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean
		id="fileUploadController"
		class="org.codelabor.system.spring.controllers.FileUploadController">
		<property name="commandName" value="post"/>
		<property name="commandClass" value="org.codelabor.system.spring.commands.Post"/>
		<property name="formView" value="example/file/spring-mvc/list"/>
		<property name="successView" value="example/file/spring-mvc/list"/>
		<property name="fileManager" ref="fileManager"/>
		<property name="propertiesService" ref="propertiesService"/>
		<property name="uniqueFileNameGenerationService" ref="uniqueFileNameGenerationService"/>
	</bean>

	<bean
		id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="104857600"/>
	</bean>
</beans>
