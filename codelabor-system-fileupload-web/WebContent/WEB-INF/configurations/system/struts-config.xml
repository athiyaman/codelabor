<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="uploadForm" type="org.codelabor.system.struts.forms.UploadForm"/>	
	</form-beans>
	<action-mappings>
		<action path="/example/file/uploadFile" name="uploadForm"
			type="org.codelabor.system.struts.actions.UploadAction" scope="request"
			parameter="method">
			<forward name="list" path="/example/file/struts/list.jsp" />
			<forward name="read" path="/example/file/struts/read.jsp" />
			<forward name="upload" path="/example/file/uploadFile.do?method=list" />
			<forward name="delete" path="/example/file/uploadFile.do?method=list" />
		</action>
		<action path="/example/file/downloadFile"
			type="org.codelabor.system.struts.actions.DownloadAction" scope="request"/>
	</action-mappings>
	<message-resources 
		parameter="messages.example.MessageResources"
		key="example" />	
</struts-config>